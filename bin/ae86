#!/usr/bin/env node

var path = require('path'),
    AE86 = require('../lib/ae86').AE86,
    args = {};
    
/*
var usage = '\x1b[1mUsage\x1b[0m: dangdut [options]\n'
    + '\n'
    + '\x1b[1mOptions\x1b[0m:\n'
    + '  -o, --outdir   Directory where static files will be written to\n'
    + '  -v, --version  Display version number\n'
    + '  -h, --help     Display help info\n';


var args = process.argv.slice(2);
while (args.length) {
    var arg = args.shift();
    switch (arg) {
        case '-h':
        case '--help':
            abort(usage);
            break;
    }
}
*/

var options = {
        layouts: path.join(process.cwd(), (args.layouts || 'layouts')),
        pages: path.join(process.cwd(), (args.pages || 'pages')),
        partials: path.join(process.cwd(), (args.partials || 'partials')),
        out: path.join(process.cwd(), (args.out || 'out')),
        engine: args.engine || 'jazz',
        encoding: args.encoding || 'utf-8'
    },
    ae86 = new AE86(options);
ae86.drift();